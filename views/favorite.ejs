<!DOCTYPE html>
<html lang="en">
<%- include('partials/head',{page_title: 'favorite' }) %>

    <body>
        <header>
            <%- include('partials/header',{qPage : '/quote' ,fPage:'#',aPage:'/about-us'}) %>

        </header>
        <main>
            <img id="imgbox" src="/undraw_Appreciation_re_p6rl.png" alt="">


            <div class="carrdContainer">
                <% quotes.forEach(quote=>{ %>
                    <div class="eachContainerQuote <%= quote.category %>">

                        <h2>
                            <%= quote.author %>
                        </h2>
                        <hr>
                        <h4>
                            <%= quote.quote %>
                        </h4>
                        <br><br>
                        <h6>Category:
                             <%= quote.category %>
                        </h6>

                        <form action="/quote?_method=DELETE" method="POST">
                            <input type="hidden" name="id" value="<%= quote.id %>">
                            <input type="submit" name="DELETE" id="submitBtn" value="DELETE">
                        </form>
                    </div>
                    <% }) %>
            </div>
        </main>

        <%- include('partials/footer') %>

    </body>

</html>