<!DOCTYPE html>
<html lang="en">
<%- include('partials/head',{page_title: 'favorite' }) %>

    <body>
        <header>
            <%- include('partials/header',{qPage : '/quote' ,fPage:'#',aPage:'/about-us'}) %>

        </header>
        <main>

            <% quotes.forEach(quote=>{ %>
                <h2>
                    <%= quote.author %>
                </h2>
                <p>
                    <%= quote.quote %>
                </p>
                <h3>
                    <%= quote.category %>
                </h3>
                <h5>
                    <%= quote.liked %>
                </h5>
                <form action="/quote?_method=DELETE" method="POST">
                    <input type="hidden" name="id" value="<%= quote.id %>">
                    <input type="submit" name="DELETE" id="submitBtn" value="DELETE">

                </form>
                <% }) %>

        </main>

        <%- include('partials/footer') %>

    </body>

</html>